            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/min6"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/min7"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
